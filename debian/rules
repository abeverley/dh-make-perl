#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure
	./Build distmeta
	./Build manifest

override_dh_auto_clean:
	dh_auto_clean
	[ ! -f MANIFEST.SKIP.bak ] || mv MANIFEST.SKIP.bak MANIFEST.SKIP

clean:
	dh clean

	# clean after test packages
	for i in Strange-0.1 Strange-2.1; do\
		if test -d "t/dists/$$i/debian"; then \
		    ( \
			cd t/dists/$$i && \
			debian/rules clean && \
			cd .. && \
			rm -rf $$i/debian; \
		    ) \
		fi \
	done
